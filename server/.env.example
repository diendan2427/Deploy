# ==========================================
# BugHunter Server Environment Variables
# ==========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env file with real credentials!
# ==========================================

# Server Configuration
PORT=5000
NODE_ENV=development

# ==========================================
# MongoDB Configuration
# ==========================================
# For LOCAL development (MongoDB Compass):
# MONGODB_URI=mongodb://localhost:27017/bughunter

# For MongoDB Atlas (Cloud - RECOMMENDED for team):
MONGODB_URI=mongodb+srv://username:password@cluster.xxxxx.mongodb.net/BugHunter?retryWrites=true&w=majority

# ==========================================
# JWT Configuration
# ==========================================
# Generate a strong secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# ==========================================
# OAuth Configuration (Optional)
# ==========================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Facebook OAuth
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# ==========================================
# Client Configuration
# ==========================================
CLIENT_URL=http://localhost:3000

# ==========================================
# Judge0 Configuration (Code Execution)
# ==========================================
# For local Docker:
# JUDGE0_API_URL=http://localhost:2358
# JUDGE0_API_KEY=

# For RapidAPI Judge0 (Production):
# JUDGE0_API_URL=https://judge0-ce.p.rapidapi.com
# JUDGE0_API_KEY=your-rapidapi-key

JUDGE0_API_URL=http://localhost:2358
JUDGE0_API_KEY=

# ==========================================
# Google Gemini AI Configuration (Optional)
# ==========================================
GEMINI_API_KEY=your-gemini-api-key

# ==========================================
# Admin Configuration
# ==========================================
ADMIN_EMAIL=admin@bughunter.com

# ==========================================
# SMS Configuration (Optional - Twilio)
# ==========================================
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_PHONE_NUMBER=your-twilio-phone-number

# ==========================================
# Email Configuration (Optional - Nodemailer)
# ==========================================
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-email-app-password
